<div>this is the book
  <%= link_to @book.title, @book %>
  <% if @book.chapters.any? %>
    <div>
      <ul>
        <% @book.chapters.each do |chapter| %>
          <li><%= link_to chapter.name, chapter %></li>
          <li><%= chapter.paragraphs.to_sql %></li>
        <% end %>
      </ul>
  <% end %>
  
  <% if @book.paragraphs.any? %>
    this book has the following paragraphs as well
      <ul>
        <%= @book.paragraphs.to_sql %>
        <% @book.paragraphs.each do |paragraphs| %>
          <li><%= paragraphs.number %></li>
        <% end %>
      </ul>
  <% end %>


  </br>
  <%= link_to 'New Chapter', new_book_chapter_path(@book) %>
</div>
